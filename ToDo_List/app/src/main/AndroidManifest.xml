<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="in.ac.iiitd.kunal.todo_list">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity" android:screenOrientation="portrait">

        </activity>
        <activity android:name=".todo_fragment"
            android:screenOrientation="portrait"
            />
        <activity android:name=".SingleFragmentActivity" android:screenOrientation="portrait"/>
        <activity
            android:name=".TaskPager"
            android:parentActivityName=".todo_fragment"
            android:screenOrientation="portrait"
            />
        <activity android:name=".TaskFragments" android:screenOrientation="portrait"/>
        <activity android:name=".login" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            </activity>
        <activity android:name=".SignUp" android:screenOrientation="portrait"></activity>
    </application>

</manifest>